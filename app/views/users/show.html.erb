<main>
<div class="container px-5 px-sm-0">

<div class="row">
    <div class="col-md-3">
    <%= render 'users/list', user: @user,  book_new: @book_new %>
    </div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %><br></td>
            <td><%= link_to book_path(book) do %>
　　　          <%= book.title %>
　　　          <% end %></td>
　　　      <td><%= book.body %></td>
        </tr>
    </tbody>
    <% end %>
</table>
</div>
</div>
</div>
</main>
<footer>
    <div class="container mt-5">
        <div class="row">
            <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>