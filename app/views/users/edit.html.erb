<main>
<div class="container">
  <div class="row">
    <div class="mx-auto">

<h2>User info</h2>

       <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <%= @user.errors.count %>prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

        <%= form_with model:@user, local:true do |f| %>

        <label for="user_name">Name</label><br>
        <%= f.text_field :name %><br>

        <label for="inputImage">Image</label><br>
         <%= f.attachment_field :profile_image, placeholder: "Image" %>

        <P>Introduction</P>
        <%= f.text_area :introduction %><br>

        <input type="submit" class="btn btn-secondary" value="Update User">

        <% end %>
      </div>
    </div>
  </div>
</main>
<footer>
    <div class="container mt-5">
        <div class="row">
            <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>


