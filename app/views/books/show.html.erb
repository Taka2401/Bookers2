<main>

<div class="container px-5 px-sm-0">

<div class="row">
    <div class="col-md-3">
        <%= render 'users/list', user: @user,  book_new: @book_new %>
    </div>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tr>
            <td><%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %><br>
                <%= link_to user_path(@user) do %>
                <%= @user.name %>
                <% end %></td>
            <td><%= link_to book_path(@book) do %>
                <%= @book.title %>
　　　          <% end %></td>
            <td><%= @book.body %></td>
            <% if user_signed_in? && current_user.id == @book.user_id %>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-sm btn-success' %></td>
　　　      <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data:{ confirm: 'Are you sure？' }, class: 'btn btn-sm btn-danger destroy_book_22227' %></td>
　　　      <% end %>
        </tr>
    </table>
</div>
</div>
</div>
</main>
<footer>
    <div class="container mt-5">
        <div class="row">
            <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>