<main>

<div class="container px-5 px-sm-0">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
     <div class="col-md-3">
        <%= render 'users/list', user: @user,  book_new: @book %>
    </div>

<div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
    <% @books.each do |book| %>
        <tbody>
            <tr>
                <td><%= link_to user_path(book.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %></td>
                    <% end %>
                <td><%= link_to book_path(book) do %>
                    <%= book.title %>
　　　              <% end %></td>
                <td><%= book.body %></td>
            </tr>
        </tbody>
    <% end %>
</table>
</div>
</div>
</div>
</div>
</main>
<footer>
    <div class="container mt-5">
        <div class="row">
            <div class="mx-auto">
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>